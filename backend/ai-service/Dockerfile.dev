FROM node:20-alpine

WORKDIR /app
RUN apk add --no-cache curl
COPY package*.json ./
RUN npm ci   # include devDependencies for nodemon/cross-env
COPY . .

EXPOSE 3003
HEALTHCHECK --interval=10s --timeout=3s --start-period=10s --retries=3 \
    CMD curl -fsS http://127.0.0.1:3003/health || exit 1

CMD ["npm","run","dev"]
