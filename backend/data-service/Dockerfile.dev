# backend/data-service/Dockerfile.dev
FROM node:20-alpine
WORKDIR /app

# 1) copy only package.json (not package-lock since we're in a workspace)
COPY package.json ./

# 2) Install dependencies (use npm install for dev, ignore scripts to speed up)
RUN npm install --ignore-scripts --no-audit --no-fund || npm install --no-audit --no-fund

# 3) app files
COPY . .

# Security: Run as non-root user
RUN chown -R node:node /app
USER node

EXPOSE 3002
CMD ["npm","run","dev"]
