# backend/data-service/Dockerfile.dev
FROM node:20-alpine
WORKDIR /app

# 1) copy package files
COPY package.json ./
COPY package-lock.json* ./

# 2) Install dependencies (use npm install for dev, ignore scripts to speed up)
# Use --legacy-peer-deps if there are peer dependency conflicts
RUN npm install --ignore-scripts --no-audit --no-fund --legacy-peer-deps || npm install --no-audit --no-fund

# 3) app files
COPY . .

# Security: Run as non-root user
RUN chown -R node:node /app
USER node

EXPOSE 3002
CMD ["npm","run","dev"]
