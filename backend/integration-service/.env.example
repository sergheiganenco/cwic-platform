# Integration Service Environment Variables

# Service Configuration
SERVICE_NAME=integration-service
PORT=3005
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Mode Configuration
USE_MOCKS=true          # Use mock adapters for testing (true) or real integrations (false)
ENABLE_AI=false         # Enable OpenAI-powered root cause analysis
AUTO_REMEDIATE=true     # Enable automatic remediation of known issues
VERIFY_WEBHOOKS=false   # Verify GitHub webhook signatures

# Jira Configuration
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT=DATA

# ServiceNow Configuration
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USERNAME=admin
SERVICENOW_PASSWORD=your-password

# Azure DevOps Configuration
AZURE_DEVOPS_ORGANIZATION=your-organization
AZURE_DEVOPS_PROJECT=your-project
AZURE_DEVOPS_TOKEN=your-personal-access-token

# GitHub Configuration
GITHUB_TOKEN=your-github-token
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# OpenAI Configuration (optional - for AI-powered analysis)
OPENAI_API_KEY=sk-your-openai-api-key

# Internal Service URLs
PIPELINE_SERVICE_URL=http://pipeline-service:3004
DATA_SERVICE_URL=http://data-service:3002
AI_SERVICE_URL=http://ai-service:3003
